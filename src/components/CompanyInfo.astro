---
import { COMPANY_NAME, ADDRESS, PHONE, FAX, EMAIL, INSTAGRAM_URL } from '../consts';
---

<section class="bg-white border-t border-gray-200 py-20 px-6 text-center">
  <div class="max-w-xl mx-auto px-4">
    <div class="text-2xl font-bold mb-8 tracking-wide text-main">
      {COMPANY_NAME}
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      {ADDRESS}
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      TEL: {PHONE}
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      FAX: {FAX}
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      E-Mail: <a
        href={`mailto:${EMAIL}`}
        class="underline underline-offset-2 transition-colors duration-200 hover:text-accent"
      >
        {EMAIL}
      </a>
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      神奈川県造園業協会組合
    </div>
    <div class="text-lg mb-4 text-gray-600 font-serif leading-relaxed">
      一級造園技能士, 二級造園施工管理士
    </div>
    <div class="mt-8">
      <a
        href={INSTAGRAM_URL}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 text-3xl transition-all duration-300 inline-block p-2 rounded-full hover:text-accent hover:scale-110"
      >
        <i class="fab fa-instagram"></i>
      </a>
    </div>
  </div>
</section>
